<h1>
  Actor #<%= @actor_id %> details
</h1>

  <a href="/actors" class="btn btn-block btn-outline-secondary">
    Go back
  </a>

&nbsp;|&nbsp;

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>
  
  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>
  
  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.created_at) %> ago
  </dd>
  
  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.updated_at) %> ago
  </dd>

</dl>

<hr>

