<h1>
  Actor #<%= @actor_id %> details
</h1>

  <a href="/actors" class="btn btn-block btn-outline-secondary">
    Go back
  </a>

&nbsp;|&nbsp;

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>
  
  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>
  
  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.created_at) %> ago
  </dd>
  
  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.updated_at) %> ago
  </dd>

</dl>

<hr>

<h2>
  Filmography
</h2>

<table border="1">
  <% @filmography.each do |a_film|%>

    <tr>
      <td>
        <%= Movie.where({:id => a_film.movie_id}).at(0).title %>
      </td>
      
      <td>
        <%= Movie.where({:id => a_film.movie_id}).at(0).year %>
      </td>
      <td>
        <%= Director.where({:id => Movie.where({:id => a_film.movie_id}).at(0).director_id}).at(0).name %>
      </td>
      <td> 
       <%= a_film.name %>
      </td>
      <td> 
       <a href= <%= "/movies/#{a_film.movie_id}" %>>Show details</a>
      </td>
    </tr>
  <% end %>

</table>
