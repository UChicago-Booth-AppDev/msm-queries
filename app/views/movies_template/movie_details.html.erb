<h1>
  Movie #<%= @movie_id %> details
</h1>

  <a href="/movies" class="btn btn-block btn-outline-secondary">
    Go back
  </a>

&nbsp;|&nbsp;

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @movie.title %>
  </dd>
  
  <dt>
    Year
  </dt>
  <dd>
    <%= @movie.year %>
  </dd>
  
  <dt>
    Duration
  </dt>
  <dd>
    <%= @movie.duration %>
  </dd>
  
  <dt>
    Description
  </dt>
  <dd>
    <%= @movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @movie.image %>">
  </dd>
  
  <dt>
    Director
  </dt>
  <dd>
    <%= Director.where({:id => @movie.director_id}).at(0).name%>

  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@movie.created_at) %> ago
  </dd>
  
  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@movie.updated_at) %> ago
  </dd>

</dl>

<hr>
